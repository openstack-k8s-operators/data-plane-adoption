---
- name: Storage
  mtu: 1500
  vip: true
  ipv6: false
  name_lower: storage
  dns_domain: storage.{{ cloud_domain }}.
  service_net_map_replace: storage
  subnets:
    storage_subnet:
      vlan: 21
      ip_subnet: '172.18.0.0/24'
      allocation_pools: [{'start': '172.18.0.100', 'end': '172.18.0.250'}]

- name: InternalApi
  mtu: 1500
  vip: true
  ipv6: false
  name_lower: internal_api
  dns_domain: internal-api.{{ cloud_domain }}.
  service_net_map_replace: internal_api
  subnets:
    internal_api_subnet:
      vlan: 20
      ip_subnet: '172.17.0.0/24'
      allocation_pools: [{'start': '172.17.0.100', 'end': '172.17.0.250'}]

- name: Tenant
  mtu: 1500
  vip: false  # Tenant network does not use VIPs
  ipv6: false
  name_lower: tenant
  dns_domain: tenant.{{ cloud_domain }}.
  service_net_map_replace: tenant
  subnets:
    tenant_subnet:
      vlan: 22
      ip_subnet: '172.19.0.0/24'
      allocation_pools: [{'start': '172.19.0.100', 'end': '172.19.0.250'}]

- name: External
  mtu: 1500
  vip: true
  ipv6: false
  name_lower: external
  dns_domain: external.{{ cloud_domain }}.
  service_net_map_replace: external
  subnets:
    external_subnet:
      ip_subnet: '10.0.0.0/24'
      allocation_pools: [{'start': '10.0.0.130', 'end': '10.0.0.250'}]

- name: StorageMgmt
  mtu: 1500
  vip: true
  ipv6: false
  name_lower: storagemgmt
  dns_domain: storagemgmt.{{ cloud_domain }}.
  subnets:
    storage_mgmt_subnet:
      vlan: 23
      ip_subnet: "172.20.0.0/24"
      allocation_pools: [{'start': '172.20.0.100', 'end': '172.20.0.250'}]
