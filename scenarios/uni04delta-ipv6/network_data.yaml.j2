    tenant_subnet:
      vlan: 22
      ipv6_subnet: '2620:cf:cf:eeee::/64'
      ipv6_allocation_pools: [{'start': '2620:cf:cf:eeee::100', 'end': '2620:cf:cf:eeee::250'}]

- name: External
  mtu: 1500
  vip: true
  ipv6: true
